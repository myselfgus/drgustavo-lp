---
// Contato section - Seção 6
---

<section id="contato" class="contato-section">
  <div class="contato-container">
    <!-- Título Principal -->
    <h2 class="contato-titulo">Agende sua consulta</h2>

    <!-- Informações Práticas -->
    <div class="info-grupo">
      <p class="info-localizacao">São José do Rio Preto</p>
      <p class="info-atendimento">Atendimento presencial e online</p>
    </div>

    <!-- Duração -->
    <div class="info-duracao">
      <p class="duracao-linha">Primeira consulta: <strong>2 horas</strong></p>
      <p class="duracao-linha">Retornos: <strong>1 hora</strong></p>
    </div>

    <!-- Cal.com Embed Container -->
    <div class="cal-embed-container">
      <div id="cal-booking" data-cal-link="drgustavomendes">
        <!-- Cal.com será injetado aqui -->
        <div class="cal-loading">
          <div class="loading-skeleton"></div>
          <p class="loading-text">Carregando calendário...</p>
        </div>
      </div>
    </div>

    <!-- Alternativa WhatsApp -->
    <div class="whatsapp-alternativa">
      <a
        href="https://wa.me/5517211011228?text=Olá,%20vim%20do%20site"
        target="_blank"
        rel="noopener noreferrer"
        class="whatsapp-link"
      >
        Dúvidas? Fale pelo WhatsApp
      </a>
    </div>

    <!-- Footer -->
    <footer class="footer-contato">
      <!-- Links Navegação -->
      <nav class="footer-nav" aria-label="Links do rodapé">
        <a href="/blog" class="footer-link">Blog</a>
        <span class="separator" aria-hidden="true">·</span>
        <a href="/curriculo" class="footer-link">Currículo</a>
        <span class="separator" aria-hidden="true">·</span>
        <a href="/publicacoes" class="footer-link">Publicações</a>
        <span class="separator" aria-hidden="true">·</span>
        <a href="/recursos" class="footer-link">Recursos</a>
      </nav>

      <!-- Copyright -->
      <div class="footer-copyright">
        <p class="copyright-text">© 2025 Dr. Gustavo Mendes e Silva</p>
        <p class="copyright-crm">CRM-SP 218133</p>
      </div>
    </footer>
  </div>
</section>

<style>
  /* Section Layout */
  .contato-section {
    position: relative;
    min-height: 100vh;
    height: auto;
    background-color: #FAFAF8;
    display: flex;
    align-items: center;
    justify-content: center;
    overflow: hidden;
    padding: 15vh 0 5vh 0;
  }

  .contato-container {
    width: 100%;
    max-width: 1200px;
    padding: 0 clamp(40px, 10%, 120px);
    text-align: center;
    display: flex;
    flex-direction: column;
    align-items: center;
    gap: clamp(32px, 5vh, 48px);
  }

  /* Título */
  .contato-titulo {
    margin: 0;
    font-family: var(--font-sans);
    font-size: clamp(32px, 4vw, 48px);
    font-weight: var(--font-light);
    color: #1A1A1A;
    line-height: 1.2;
    opacity: 0;
    transform: translateY(30px);
  }

  .contato-titulo.visible {
    animation: fadeInUp 700ms cubic-bezier(0.16, 1, 0.3, 1) forwards;
    animation-delay: 400ms;
  }

  /* Informações Práticas */
  .info-grupo {
    display: flex;
    flex-direction: column;
    gap: 8px;
    opacity: 0;
    transform: translateY(20px);
  }

  .info-grupo.visible {
    animation: fadeInUp 600ms cubic-bezier(0.16, 1, 0.3, 1) forwards;
    animation-delay: 600ms;
  }

  .info-localizacao {
    margin: 0;
    font-family: var(--font-sans);
    font-size: clamp(18px, 2vw, 20px);
    font-weight: var(--font-medium);
    color: #2C2C2C;
    line-height: 1.5;
  }

  .info-atendimento {
    margin: 0;
    font-family: var(--font-sans);
    font-size: clamp(16px, 1.8vw, 18px);
    font-weight: var(--font-regular);
    color: #666666;
    line-height: 1.5;
  }

  /* Duração */
  .info-duracao {
    display: flex;
    flex-direction: column;
    gap: 4px;
    opacity: 0;
    transform: translateY(20px);
  }

  .info-duracao.visible {
    animation: fadeInUp 600ms cubic-bezier(0.16, 1, 0.3, 1) forwards;
    animation-delay: 700ms;
  }

  .duracao-linha {
    margin: 0;
    font-family: var(--font-sans);
    font-size: 16px;
    font-weight: var(--font-regular);
    color: #666666;
    line-height: 1.6;
  }

  .duracao-linha strong {
    font-weight: var(--font-semibold);
    color: #1A1A1A;
  }

  /* Cal.com Embed */
  .cal-embed-container {
    width: 100%;
    max-width: 600px;
    margin: 0 auto;
    border-radius: 8px;
    overflow: hidden;
    box-shadow: 0 2px 8px rgba(0, 0, 0, 0.04);
    background: #FFFFFF;
    opacity: 0;
    transform: translateY(30px);
  }

  .cal-embed-container.visible {
    animation: fadeInUp 800ms cubic-bezier(0.16, 1, 0.3, 1) forwards;
    animation-delay: 800ms;
  }

  /* Cal.com Loading State */
  .cal-loading {
    padding: 60px 40px;
    display: flex;
    flex-direction: column;
    align-items: center;
    gap: 20px;
  }

  .loading-skeleton {
    width: 100%;
    height: 400px;
    background: linear-gradient(90deg, #F5F5F5 25%, #E5E5E5 50%, #F5F5F5 75%);
    background-size: 200% 100%;
    animation: loading-pulse 1.5s ease-in-out infinite;
    border-radius: 4px;
  }

  @keyframes loading-pulse {
    0% { background-position: 200% 0; }
    100% { background-position: -200% 0; }
  }

  .loading-text {
    margin: 0;
    font-family: var(--font-sans);
    font-size: 14px;
    font-weight: var(--font-regular);
    color: #999999;
  }

  /* WhatsApp Alternativa */
  .whatsapp-alternativa {
    margin-top: clamp(12px, 2vh, 16px);
    opacity: 0;
    transform: translateY(10px);
  }

  .whatsapp-alternativa.visible {
    animation: fadeInUp 400ms cubic-bezier(0.16, 1, 0.3, 1) forwards;
    animation-delay: 1000ms;
  }

  .whatsapp-link {
    font-family: var(--font-sans);
    font-size: 16px;
    font-weight: var(--font-regular);
    color: #666666;
    text-decoration: none;
    transition: all 0.2s ease;
    display: inline-block;
  }

  .whatsapp-link:hover {
    color: #1A1A1A;
    text-decoration: underline;
  }

  /* Footer */
  .footer-contato {
    width: 100%;
    margin-top: clamp(60px, 8vh, 80px);
    padding-top: clamp(32px, 4vh, 40px);
    border-top: 1px solid rgba(0, 0, 0, 0.08);
    display: flex;
    flex-direction: column;
    align-items: center;
    gap: 16px;
    opacity: 0;
  }

  .footer-contato.visible {
    animation: fadeIn 600ms ease-out forwards;
    animation-delay: 1200ms;
  }

  /* Footer Nav */
  .footer-nav {
    display: flex;
    align-items: center;
    gap: 12px;
    flex-wrap: wrap;
    justify-content: center;
  }

  .footer-link {
    font-family: var(--font-sans);
    font-size: 14px;
    font-weight: var(--font-regular);
    color: #999999;
    text-decoration: none;
    transition: all 0.2s ease;
  }

  .footer-link:hover {
    color: #1A1A1A;
    text-decoration: underline;
  }

  .separator {
    color: rgba(0, 0, 0, 0.4);
    font-size: 14px;
  }

  /* Footer Copyright */
  .footer-copyright {
    display: flex;
    flex-direction: column;
    gap: 4px;
    text-align: center;
  }

  .copyright-text,
  .copyright-crm {
    margin: 0;
    font-family: var(--font-sans);
    font-size: 13px;
    font-weight: var(--font-regular);
    color: #CCCCCC;
    line-height: 1.6;
  }

  /* Responsive - Tablet */
  @media (min-width: 768px) and (max-width: 1023px) {
    .contato-container {
      padding: 0 8%;
    }

    .contato-titulo {
      font-size: 42px;
    }

    .cal-embed-container {
      max-width: 90%;
    }
  }

  /* Responsive - Mobile */
  @media (max-width: 767px) {
    .contato-section {
      min-height: 100svh;
      padding: 120px 0 60px 0;
    }

    .contato-container {
      padding: 0 24px;
      gap: 32px;
    }

    .contato-titulo {
      font-size: 32px;
    }

    .info-localizacao {
      font-size: 18px;
    }

    .info-atendimento {
      font-size: 16px;
    }

    .cal-embed-container {
      max-width: 100%;
    }

    .footer-nav {
      flex-direction: column;
      gap: 8px;
    }

    .separator {
      display: none;
    }

    .footer-contato {
      margin-top: 60px;
    }
  }

  /* Accessibility - Reduced Motion */
  @media (prefers-reduced-motion: reduce) {
    .contato-titulo,
    .info-grupo,
    .info-duracao,
    .cal-embed-container,
    .whatsapp-alternativa,
    .footer-contato {
      animation: none !important;
      opacity: 1 !important;
      transform: none !important;
    }

    .loading-skeleton {
      animation: none !important;
    }
  }
</style>

<script>
  function setupContatoAnimations() {
    const contatoSection = document.getElementById('contato');
    if (!contatoSection) return;

    const titulo = contatoSection.querySelector('.contato-titulo');
    const infoGrupo = contatoSection.querySelector('.info-grupo');
    const infoDuracao = contatoSection.querySelector('.info-duracao');
    const calEmbed = contatoSection.querySelector('.cal-embed-container');
    const whatsapp = contatoSection.querySelector('.whatsapp-alternativa');
    const footer = contatoSection.querySelector('.footer-contato');

    const observer = new IntersectionObserver(
      (entries) => {
        entries.forEach((entry) => {
          if (entry.isIntersecting) {
            if (titulo) titulo.classList.add('visible');
            if (infoGrupo) infoGrupo.classList.add('visible');
            if (infoDuracao) infoDuracao.classList.add('visible');
            if (calEmbed) calEmbed.classList.add('visible');
            if (whatsapp) whatsapp.classList.add('visible');
            if (footer) footer.classList.add('visible');
          }
        });
      },
      {
        threshold: 0.2,
      }
    );

    observer.observe(contatoSection);

    // Cal.com Integration - Inline Embed
    // Ref: https://cal.com/drgustavomendes
    (function () {
      const calScript = document.createElement('script');
      calScript.type = 'text/javascript';
      calScript.src = 'https://app.cal.com/embed/embed.js';
      calScript.async = true;

      calScript.onload = function() {
        // @ts-ignore
        if (typeof Cal !== 'undefined') {
          // @ts-ignore
          Cal("inline", {
            elementOrSelector: "#cal-booking",
            calLink: "drgustavomendes",
            layout: "month_view",
            config: {
              theme: "light",
              branding: {
                brandColor: "#1A1A1A"
              }
            }
          });
        }
      };

      document.head.appendChild(calScript);
    })();
  }

  if (document.readyState === 'loading') {
    document.addEventListener('DOMContentLoaded', setupContatoAnimations);
  } else {
    setupContatoAnimations();
  }
</script>
