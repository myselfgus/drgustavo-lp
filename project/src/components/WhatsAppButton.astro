---
// WhatsApp floating button
const phoneNumber = "551721101228";
const message = "Ol√°, vim do site e gostaria de saber mais sobre as consultas.";
const whatsappLink = `https://wa.me/${phoneNumber}?text=${encodeURIComponent(message)}`;
---

<a
  href={whatsappLink}
  target="_blank"
  rel="noopener noreferrer"
  class="whatsapp-button group"
  aria-label="Falar pelo WhatsApp"
  id="whatsapp-btn"
>
  <div class="absolute inset-0 bg-gradient-to-br from-accent-sage to-accent-petrol rounded-full opacity-0 group-hover:opacity-100 transition-opacity duration-normal"></div>
  <svg
    width="24"
    height="24"
    viewBox="0 0 24 24"
    fill="none"
    stroke="currentColor"
    stroke-width="1.5"
    stroke-linecap="round"
    stroke-linejoin="round"
    class="relative z-10"
  >
    <path d="M21 11.5a8.38 8.38 0 0 1-.9 3.8 8.5 8.5 0 0 1-7.6 4.7 8.38 8.38 0 0 1-3.8-.9L3 21l1.9-5.7a8.38 8.38 0 0 1-.9-3.8 8.5 8.5 0 0 1 4.7-7.6 8.38 8.38 0 0 1 3.8-.9h.5a8.48 8.48 0 0 1 8 8v.5z"></path>
  </svg>
  <span class="tooltip">Conversar no WhatsApp</span>
  
  <!-- Animated ring on hover -->
  <span class="absolute inset-0 rounded-full border-2 border-accent-sage opacity-0 group-hover:opacity-100 group-hover:scale-110 transition-all duration-normal"></span>
</a>

<script>
  // Subtle entrance animation after page load
  function initWhatsAppButton() {
    const btn = document.getElementById('whatsapp-btn');
    if (!btn) return;

    // Delay entrance animation slightly
    setTimeout(() => {
      btn.classList.add('loaded');
    }, 1500);

    // Add subtle pulse on first hover (once)
    let hasHovered = false;
    btn.addEventListener('mouseenter', () => {
      if (!hasHovered) {
        btn.classList.add('first-hover');
        hasHovered = true;
        setTimeout(() => {
          btn.classList.remove('first-hover');
        }, 600);
      }
    });

    // Track WhatsApp click - Agente IA decide
    btn.addEventListener('click', async () => {
      // @ts-ignore - fbq is loaded by Meta Pixel
      if (typeof window.fbq === 'function') {
        window.fbq('track', 'Contact', {
          content_name: 'WhatsApp Button',
          content_category: 'contact'
        });
      }

      // Agente server-side (LLM decide qualidade)
      try {
        await fetch('/api/conversion', {
          method: 'POST',
          headers: { 'Content-Type': 'application/json' },
          body: JSON.stringify({
            event_type: 'whatsapp_click',
            event_data: {
              location: 'floating_button',
              destination: 'whatsapp',
              session_id: sessionStorage.getItem('session_id') || 'unknown'
            }
          })
        });
      } catch (e) {
        console.log('Conversion tracking failed:', e);
      }
    });
  }

  if (document.readyState === 'loading') {
    document.addEventListener('DOMContentLoaded', initWhatsAppButton);
  } else {
    initWhatsAppButton();
  }
</script>

<style>
  .whatsapp-button {
    position: fixed;
    bottom: 32px;
    right: 32px;
    width: 64px;
    height: 64px;
    background: white;
    border: 2px solid #e0e3dc;
    border-radius: 50%;
    display: flex;
    align-items: center;
    justify-content: center;
    color: #2a2c27;
    box-shadow: 0 8px 24px rgba(0,0,0,0.12);
    z-index: 999;
    transition: all 0.4s cubic-bezier(0.16, 1, 0.3, 1);
    text-decoration: none;
    overflow: visible;
    opacity: 0;
    transform: scale(0.8) translateY(20px);
  }

  /* Entrance animation */
  .whatsapp-button.loaded {
    opacity: 1;
    transform: scale(1) translateY(0);
  }

  .whatsapp-button .tooltip {
    position: absolute;
    top: 50%;
    right: 0;
    transform: translate(calc(100% + 16px), -50%);
    background: white;
    color: #2a2c27;
    padding: 10px 16px;
    font-size: 14px;
    font-weight: 600;
    white-space: nowrap;
    border-radius: 8px;
    opacity: 0;
    pointer-events: none;
    transition: opacity 0.3s ease;
    box-shadow: 0 4px 16px rgba(0, 0, 0, 0.12);
    border: 1px solid #e0e3dc;
  }
  
  .whatsapp-button:hover {
    transform: translateY(-6px) scale(1.08);
    box-shadow: 0 12px 32px rgba(125, 168, 123, 0.25), 0 0 0 4px rgba(125, 168, 123, 0.1);
    border-color: #7da87b;
  }

  .whatsapp-button:hover .tooltip {
    opacity: 1;
  }

  /* Active state */
  .whatsapp-button:active {
    transform: translateY(-4px) scale(1.04);
    box-shadow: 0 8px 20px rgba(125, 168, 123, 0.2);
  }

  /* First hover pulse animation */
  .whatsapp-button.first-hover {
    animation: modern-pulse 0.8s cubic-bezier(0.16, 1, 0.3, 1);
  }

  @keyframes modern-pulse {
    0% {
      box-shadow: 0 8px 24px rgba(0,0,0,0.12);
    }
    50% {
      box-shadow: 0 8px 32px rgba(125, 168, 123, 0.4), 0 0 0 12px rgba(125, 168, 123, 0.15);
      transform: scale(1.05);
    }
    100% {
      box-shadow: 0 8px 24px rgba(0,0,0,0.12);
    }
  }
  
  .whatsapp-button svg {
    width: 28px;
    height: 28px;
    transition: transform 0.3s ease;
  }

  .whatsapp-button:hover svg {
    transform: rotate(5deg) scale(1.1);
  }
  
  @media (max-width: 768px) {
    .whatsapp-button {
      bottom: 24px;
      right: 24px;
      width: 56px;
      height: 56px;
    }
    
    .whatsapp-button svg {
      width: 24px;
      height: 24px;
    }

    .whatsapp-button .tooltip {
      display: none;
    }
  }

  @media (min-width: 769px) and (max-width: 1023px) {
    .whatsapp-button {
      bottom: 28px;
      right: 28px;
    }
  }

  /* Accessibility - Reduced Motion */
  @media (prefers-reduced-motion: reduce) {
    .whatsapp-button,
    .whatsapp-button.loaded {
      transition: none !important;
      animation: none !important;
      opacity: 1;
      transform: none;
    }

    .whatsapp-button:hover {
      transform: none;
    }

    .whatsapp-button:active {
      transform: none;
    }

    .whatsapp-button.first-hover {
      animation: none !important;
    }
  }
</style>
