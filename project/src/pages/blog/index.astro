---
import BaseLayout from '../../layouts/BaseLayout.astro';

const posts = [
  {
    slug: 'disruptura-cognitiva',
    title: 'Disruptura cognitiva: quebrando padrões',
    excerpt: 'Estratégias para auxiliar pacientes a quebrar padrões de pensamento negativos e construir nova arquitetura mental...',
    readTime: '12 min',
    date: '2025-01-10',
    image: null
  },
  {
    slug: 'ia-saude',
    title: 'IA na saúde: rehumanizar a clínica',
    excerpt: 'Como a tecnologia, bem aplicada, pode liberar o médico para focar no que mais importa: a conexão humana...',
    readTime: '10 min',
    date: '2025-01-08',
    image: null
  },
  {
    slug: 'neurodiversidade-sociedade',
    title: 'Neurodiversidade não é defeito',
    excerpt: 'Uma reflexão sobre como a sociedade patologiza diferenças neurológicas e a importância de abraçar a diversidade cognitiva...',
    readTime: '15 min',
    date: '2025-01-05',
    image: null
  }
];
---

<BaseLayout
  title="Blog - Dr. Gustavo Mendes | Artigos sobre Saúde Mental"
  description="Artigos sobre psiquiatria, neurodiversidade, TDAH, autismo e saúde mental. Reflexões e insights para profissionais e pacientes."
  showDots={false}
>
  <main class="blog-page">
    <div class="blog-container">
      <!-- Cabeçalho -->
      <header class="blog-header">
        <h1 class="blog-title">Blog</h1>
        <p class="blog-subtitle">
          Reflexões sobre saúde mental, neurodiversidade e psiquiatria humanizada
        </p>
      </header>

      <!-- Grid de artigos -->
      <section class="blog-grid" aria-label="Artigos do blog">
        {posts.map((post) => (
          <article class="blog-card">
            <a href={`/blog/${post.slug}`} class="card-link">
              <div class="card-image-placeholder"></div>
              <div class="card-content">
                <h2 class="card-title">{post.title}</h2>
                <p class="card-excerpt">{post.excerpt}</p>
                <div class="card-meta">
                  <span class="read-time">{post.readTime}</span>
                  <span class="separator">·</span>
                  <time datetime={post.date}>
                    {new Date(post.date).toLocaleDateString('pt-BR', {
                      day: 'numeric',
                      month: 'short',
                      year: 'numeric'
                    })}
                  </time>
                </div>
              </div>
            </a>
          </article>
        ))}
      </section>
    </div>
  </main>
</BaseLayout>

<style>
  .blog-page {
    min-height: 100vh;
    padding: 120px 0 80px;
    background: var(--bg-primary, #FFFFFF);
  }

  .blog-container {
    max-width: 1200px;
    margin: 0 auto;
    padding: 0 40px;
  }

  .blog-header {
    text-align: center;
    margin-bottom: 80px;
  }

  .blog-title {
    font-size: 48px;
    font-weight: 300;
    color: var(--text-primary, #1A1A1A);
    margin: 0 0 16px;
    letter-spacing: -0.02em;
  }

  .blog-subtitle {
    font-size: 18px;
    color: var(--text-secondary, #666666);
    margin: 0;
    max-width: 600px;
    margin: 0 auto;
    line-height: 1.6;
  }

  .blog-grid {
    display: grid;
    grid-template-columns: repeat(auto-fill, minmax(320px, 1fr));
    gap: 40px;
  }

  .blog-card {
    background: var(--bg-primary, #FFFFFF);
    border: 1px solid var(--border, #E5E5E5);
    border-radius: 8px;
    overflow: hidden;
    transition: all 0.3s ease;
  }

  .blog-card:hover {
    transform: translateY(-4px);
    box-shadow: 0 8px 24px rgba(0,0,0,0.08);
    border-color: transparent;
  }

  .card-link {
    text-decoration: none;
    display: block;
  }

  .card-image-placeholder {
    width: 100%;
    height: 200px;
    background: linear-gradient(135deg, #F5F5F5 0%, #E5E5E5 100%);
  }

  .card-content {
    padding: 32px;
  }

  .card-title {
    font-size: 24px;
    font-weight: 500;
    color: var(--text-primary, #1A1A1A);
    margin: 0 0 16px;
    line-height: 1.3;
  }

  .card-excerpt {
    font-size: 16px;
    color: var(--text-secondary, #666666);
    line-height: 1.6;
    margin: 0 0 24px;
  }

  .card-meta {
    font-size: 14px;
    color: var(--text-tertiary, #999999);
    display: flex;
    align-items: center;
    gap: 8px;
  }

  .separator {
    opacity: 0.4;
  }

  @media (max-width: 768px) {
    .blog-page {
      padding: 100px 0 60px;
    }

    .blog-container {
      padding: 0 24px;
    }

    .blog-title {
      font-size: 36px;
    }

    .blog-subtitle {
      font-size: 16px;
    }

    .blog-grid {
      grid-template-columns: 1fr;
      gap: 32px;
    }

    .card-content {
      padding: 24px;
    }

    .card-title {
      font-size: 20px;
    }
  }
</style>
