---
import BaseLayout from '../layouts/BaseLayout.astro';

const portraitBase = '/images/dr-gustavo-portrait';
const portraitSrcset = [320, 420, 480, 560, 640, 720, 820, 900, 1024]
  .map(size => `${portraitBase}-${size}.jpg ${size}w`)
  .join(', ');
const portraitSizes = '(min-width: 1024px) 320px, (min-width: 768px) 260px, 80vw';
const portraitFallback = `${portraitBase}-720.jpg`;

const academicTimeline = [
  {
    year: '2020',
    title: 'Graduação em Medicina',
    institution: 'Faculdade Estadual de Medicina de Marília (FAMEMA)',
    details: 'Nota 5 no ENADE. Metodologias ativas e integração ensino-serviço com forte atuação em saúde mental comunitária.'
  },
  {
    year: '2024',
    title: 'MBA em Gestão, Inovação e Serviços em Saúde',
    institution: 'PUC-RS',
    details: 'Gestão estratégica de serviços de saúde mental, modelos assistenciais e políticas públicas.'
  },
  {
    year: 'Cursando',
    title: 'MBA em Health Tech',
    institution: 'FIAP'
  }
];

const certifications = [
  {
    title: 'Especialização em Psiquiatria',
    institution: 'FGMED · 492 horas · 2024',
    description: 'Psicofarmacologia avançada, diagnóstico e tratamento de transtornos mentais e psicopatologia aplicada.'
  },
  {
    title: 'Especialização em Psiquiatria',
    institution: 'Sanar/Cetrus · 432 horas · 2024',
    description: 'Semiologia, raciocínio clínico e abordagens terapêuticas contemporâneas em saúde mental.'
  },
  {
    title: 'Clinical Cannabinoid Medicine Specialist',
    institution: 'Society of Cannabis Clinicians (SCC) · 2024',
    description: 'Certificação internacional em prescrição e manejo de cannabis medicinal para transtornos neuropsiquiátricos.'
  },
  {
    title: 'Medicina Canabinoide',
    institution: 'EEPHCFMUSP · 2024',
    description: 'Sistema endocanabinoide, farmacocinética e aplicações clínicas em psiquiatria.'
  }
];

const extensionCourses = [
  'Medical Neuroscience — Duke University (2024)',
  'Dependência Química — Artmed360 (180h) (2024)',
  'Transtornos do Sono — CENBRAP (2024)',
  'Terapia de Aceitação e Compromisso (ACT) — IBAC (2024)',
  'Autismo, Psicanálise e Conexões — PUC Minas (2024-2025)',
  'Aplicações Psiquiátricas dos Canabinoides — TMCI Global (2024)'
];

const clinicalExperience = [
  'Saúde Mental Comunitária (CAPS II, CAPS IJ e CAPS AD): manejo de transtornos graves, construção de Planos Terapêuticos Singulares e articulação de rede.',
  'Emergências Psiquiátricas (UPA e Hospital): atendimento 24h com foco em crises agudas, risco suicida e manejo de agitação psicomotora.',
  'Enfermaria Psiquiátrica: acompanhamento diário, ajuste de psicofármacos e planejamento de alta segura.'
];

const skills = {
  diagnosis: [
    'Avaliação psiquiátrica estruturada',
    'Diagnóstico diferencial em psiquiatria',
    'Aplicação de escalas e instrumentos',
    'Avaliação de risco suicida e heteroagressivo',
    'Avaliação neuropsiquiátrica'
  ],
  treatment: [
    'Psicofarmacologia avançada',
    'Manejo de psicoses e transtornos do humor',
    'Tratamento de transtornos de ansiedade',
    'Abordagem de dependência química',
    'Intervenção em crises',
    'Prescrição de cannabis medicinal'
  ],
  specializations: [
    'Psiquiatria do adulto',
    'Psiquiatria infantojuvenil',
    'Dependência química',
    'Emergências psiquiátricas',
    'Medicina do sono',
    'Sistema endocanabinoide'
  ]
};

const affiliations = [
  'Membro da Society of Cannabis Clinicians (SCC)',
  'Membro da International AIDS Society (2020-2023) com atuação em saúde mental de pacientes vivendo com HIV/AIDS'
];

const languages = [
  { name: 'Inglês', detail: 'Fluente · TOEFL iBT 108/120' },
  { name: 'Espanhol', detail: 'Intermediário' },
  { name: 'Francês', detail: 'Básico' }
];
---

<BaseLayout
  title="Currículo - Dr. Gustavo Mendes e Silva | Médico Psiquiatra CRM-SP 218133"
  description="Formação acadêmica, certificações e experiência profissional do Dr. Gustavo Mendes e Silva, médico psiquiatra especializado em saúde mental comunitária, emergências psiquiátricas e medicina canabinoide."
  showDots={false}
>
  <main class="curriculo-page">
    <section class="cv-hero cv-wrap" data-animate="fade-up">
      <div class="cv-hero__content">
        <span class="cv-hero__eyebrow">Currículo</span>
        <h1 class="cv-hero__title">Dr. Gustavo Mendes e Silva</h1>
        <p class="cv-hero__role">
          Médico Psiquiatra ·
          <a
            href="https://www.cremesp.org.br/?siteAcao=BuscaMedicos&crm=218133"
            target="_blank"
            rel="noopener noreferrer"
          >
            CRM-SP 218133
          </a>
        </p>
        <ul class="cv-hero__highlights">
          <li>CAPS adulto, infantojuvenil e álcool/drogas</li>
          <li>Emergências e enfermaria psiquiátrica 24h</li>
          <li>Medicina canabinoide guiada por dados</li>
        </ul>
        <p class="cv-hero__summary">
          Atua em saúde mental pública e privada unindo psicofarmacologia avançada, manejo de crises e inteligência artificial para registrar cada consulta com precisão e manter planos terapêuticos vivos, colaborativos e baseados em evidências.
        </p>
        <div class="cv-hero__actions">
          <a href="mailto:contato@drgustavomendes.com">contato@drgustavomendes.com</a>
          <a href="https://linkedin.com/in/drgustavomendes" target="_blank" rel="noopener noreferrer">LinkedIn</a>
          <a href="/pdfs/curriculo.pdf" class="cv-hero__download" download>Baixar PDF</a>
        </div>
      </div>
      <figure class="cv-hero__portrait">
        <img
          src={portraitFallback}
          srcset={portraitSrcset}
          sizes={portraitSizes}
          alt="Retrato do Dr. Gustavo Mendes e Silva"
          loading="eager"
          decoding="async"
        />
      </figure>
    </section>

    <section class="cv-section cv-wrap" data-animate="fade-up">
      <header class="cv-section__header">
        <h2>Formação Acadêmica</h2>
        <p>Graduação e pós-graduações que sustentam a prática clínica integrada com tecnologia e políticas públicas.</p>
      </header>
      <ul class="cv-timeline">
        {academicTimeline.map(item => (
          <li class="cv-timeline__item">
            <span class="cv-timeline__year">{item.year}</span>
            <div class="cv-timeline__content">
              <h3>{item.title}</h3>
              <p>{item.institution}</p>
              {item.details && <p class="cv-timeline__details">{item.details}</p>}
            </div>
          </li>
        ))}
      </ul>
    </section>

    <section class="cv-section cv-wrap" data-animate="fade-up">
      <header class="cv-section__header">
        <h2>Especializações e Certificações</h2>
        <p>Programas formais e certificações que aprofundam o cuidado farmacológico e canabinoide.</p>
      </header>
      <ul class="cv-cards">
        {certifications.map(item => (
          <li class="cv-card">
            <h3>{item.title}</h3>
            <span class="cv-card__meta">{item.institution}</span>
            <p>{item.description}</p>
          </li>
        ))}
      </ul>
    </section>

    <section class="cv-section cv-wrap" data-animate="fade-up">
      <header class="cv-section__header">
        <h2>Formação Complementar</h2>
        <p>Educação médica continuada com foco em neurociência, dependência química e terapias emergentes.</p>
      </header>
      <ul class="cv-list">
        {extensionCourses.map(course => (
          <li>{course}</li>
        ))}
      </ul>
    </section>

    <section class="cv-section cv-wrap" data-animate="fade-up">
      <header class="cv-section__header">
        <h2>Atuação Clínica</h2>
        <p>Experiência transversal em rede pública e privada com foco em crise, continuidade de cuidado e integração de equipes.</p>
      </header>
      <ul class="cv-list">
        {clinicalExperience.map(item => (
          <li>{item}</li>
        ))}
      </ul>
    </section>

    <section class="cv-section cv-wrap" data-animate="fade-up">
      <header class="cv-section__header">
        <h2>Competências e Perfil</h2>
        <p>Conjunto de habilidades clínicas e focos de especialização que sustentam os planos terapêuticos.</p>
      </header>
      <div class="cv-grid">
        <div class="cv-grid__column">
          <h3>Diagnóstico e Avaliação</h3>
          <ul>
            {skills.diagnosis.map(skill => (
              <li>{skill}</li>
            ))}
          </ul>
        </div>
        <div class="cv-grid__column">
          <h3>Tratamento</h3>
          <ul>
            {skills.treatment.map(skill => (
              <li>{skill}</li>
            ))}
          </ul>
        </div>
        <div class="cv-grid__column">
          <h3>Áreas de Especialização</h3>
          <ul>
            {skills.specializations.map(area => (
              <li>{area}</li>
            ))}
          </ul>
        </div>
      </div>
    </section>

    <section class="cv-section cv-wrap" data-animate="fade-up">
      <header class="cv-section__header">
        <h2>Afiliações e Idiomas</h2>
        <p>Inserção em comunidades científicas e comunicação em diferentes contextos culturais.</p>
      </header>
      <div class="cv-grid cv-grid--dual">
        <div class="cv-grid__column">
          <h3>Afiliações Profissionais</h3>
          <ul>
            {affiliations.map(item => (
              <li>{item}</li>
            ))}
          </ul>
        </div>
        <div class="cv-grid__column">
          <h3>Idiomas</h3>
          <ul>
            {languages.map(language => (
              <li>
                <strong>{language.name}:</strong> {language.detail}
              </li>
            ))}
          </ul>
        </div>
      </div>
    </section>
  </main>
</BaseLayout>

<style>
  .curriculo-page {
    display: flex;
    flex-direction: column;
    gap: clamp(32px, 6vh, 48px);
    padding-block: clamp(48px, 8vh, 80px);
    background: linear-gradient(180deg, #f8f6f1 0%, #ffffff 65%, #f5f9f8 100%);
  }

  .cv-wrap {
    width: min(1080px, calc(100% - 32px));
    margin-inline: auto;
  }

  .cv-hero {
    display: grid;
    align-items: center;
    gap: clamp(24px, 4vw, 40px);
    grid-template-columns: repeat(auto-fit, minmax(260px, 1fr));
    background: rgba(255, 255, 255, 0.78);
    border: 1px solid rgba(31, 62, 70, 0.08);
    border-radius: var(--radius-xl);
    padding: clamp(24px, 4vw, 36px);
    backdrop-filter: blur(10px);
    box-shadow: 0 42px 80px rgba(18, 19, 16, 0.12);
  }

  .cv-hero__content {
    display: grid;
    gap: clamp(12px, 2vh, 20px);
  }

  .cv-hero__eyebrow {
    font-family: var(--font-mono);
    letter-spacing: 0.36em;
    text-transform: uppercase;
    font-size: var(--text-xs);
    color: var(--text-tertiary);
  }

  .cv-hero__title {
    margin: 0;
    font-family: var(--font-serif);
    font-size: clamp(2rem, 5vw, 2.8rem);
    font-weight: var(--font-light);
    line-height: 1.1;
    color: var(--text-primary);
  }

  .cv-hero__role {
    margin: 0;
    font-size: 1rem;
    color: var(--text-secondary);
    display: flex;
    gap: 8px;
    flex-wrap: wrap;
  }

  .cv-hero__role a {
    color: inherit;
    text-decoration: none;
    border-bottom: 1px solid rgba(31, 62, 70, 0.2);
    transition: border-color var(--transition-fast);
  }

  .cv-hero__role a:hover {
    border-color: rgba(31, 62, 70, 0.4);
  }

  .cv-hero__highlights {
    list-style: none;
    padding: 0;
    margin: 0;
    display: grid;
    gap: 10px;
    font-size: 0.95rem;
    color: var(--text-secondary);
  }

  .cv-hero__highlights li {
    display: inline-flex;
    align-items: center;
    gap: 10px;
  }

  .cv-hero__highlights li::before {
    content: '';
    width: 8px;
    height: 8px;
    border-radius: 50%;
    background: var(--brand-primary);
    opacity: 0.35;
  }

  .cv-hero__summary {
    margin: 0;
    font-size: 1rem;
    line-height: 1.65;
    color: var(--text-secondary);
  }

  .cv-hero__actions {
    display: flex;
    flex-wrap: wrap;
    gap: 12px;
  }

  .cv-hero__actions a {
    display: inline-flex;
    align-items: center;
    justify-content: center;
    padding: 10px 20px;
    border-radius: var(--radius-full);
    border: 1px solid rgba(31, 62, 70, 0.18);
    color: var(--text-primary);
    text-decoration: none;
    background: rgba(255, 255, 255, 0.72);
    transition: transform var(--transition-fast), border-color var(--transition-fast);
  }

  .cv-hero__actions a:hover {
    transform: translateY(-2px);
    border-color: rgba(31, 62, 70, 0.32);
  }

  .cv-hero__download {
    background: var(--brand-primary);
    color: white;
    border-color: transparent;
  }

  .cv-hero__portrait {
    position: relative;
    margin: 0;
    width: 100%;
    max-width: 360px;
    justify-self: center;
    border-radius: 32% 68% 58% 42% / 38% 52% 48% 62%;
    background: radial-gradient(circle at 30% 20%, rgba(125, 168, 123, 0.22), transparent 70%),
      linear-gradient(150deg, rgba(255, 255, 255, 0.85), rgba(210, 168, 87, 0.22));
    overflow: hidden;
    box-shadow: 0 42px 80px rgba(18, 19, 16, 0.18);
    animation: cv-portrait-drift 22s ease-in-out infinite;
  }

  .cv-hero__portrait img {
    display: block;
    width: 100%;
    height: 100%;
    object-fit: cover;
    object-position: 50% 42%;
    filter: saturate(100%);
  }

  .cv-section {
    background: rgba(255, 255, 255, 0.82);
    border: 1px solid rgba(31, 62, 70, 0.08);
    border-radius: var(--radius-xl);
    padding: clamp(20px, 3.5vw, 32px);
    display: grid;
    gap: clamp(16px, 3vh, 24px);
    backdrop-filter: blur(8px);
    box-shadow: 0 28px 60px rgba(18, 19, 16, 0.09);
  }

  .cv-section__header h2 {
    margin: 0;
    font-family: var(--font-serif);
    font-size: clamp(1.4rem, 3.5vw, 1.75rem);
    color: var(--text-primary);
  }

  .cv-section__header p {
    margin: 6px 0 0;
    font-size: 0.95rem;
    color: var(--text-secondary);
    line-height: 1.6;
  }

  .cv-timeline {
    list-style: none;
    padding: 0;
    margin: 0;
    display: grid;
    gap: 16px;
  }

  .cv-timeline__item {
    display: grid;
    grid-template-columns: minmax(90px, auto) 1fr;
    gap: 20px;
    align-items: start;
  }

  .cv-timeline__year {
    font-family: var(--font-mono);
    font-size: 0.85rem;
    letter-spacing: 0.28em;
    text-transform: uppercase;
    color: var(--text-tertiary);
    padding-top: 6px;
  }

  .cv-timeline__content h3 {
    margin: 0 0 6px;
    font-size: 1.1rem;
    color: var(--text-primary);
  }

  .cv-timeline__content p {
    margin: 0;
    color: var(--text-secondary);
    line-height: 1.6;
  }

  .cv-timeline__details {
    margin-top: 8px;
  }

  .cv-cards {
    list-style: none;
    margin: 0;
    padding: 0;
    display: grid;
    gap: clamp(12px, 2.5vw, 18px);
    grid-template-columns: repeat(auto-fit, minmax(220px, 1fr));
  }

  .cv-card {
    padding: 16px;
    border-radius: var(--radius-lg);
    background: rgba(255, 255, 255, 0.9);
    border: 1px solid rgba(31, 62, 70, 0.08);
    display: grid;
    gap: 10px;
    transition: transform var(--transition-fast), box-shadow var(--transition-fast);
  }

  .cv-card:hover {
    transform: translateY(-3px);
    box-shadow: 0 18px 36px rgba(18, 19, 16, 0.12);
  }

  .cv-card h3 {
    margin: 0;
    font-size: 1.1rem;
    color: var(--text-primary);
  }

  .cv-card__meta {
    font-size: 0.9rem;
    text-transform: uppercase;
    letter-spacing: 0.12em;
    color: var(--text-tertiary);
  }

  .cv-card p {
    margin: 0;
    color: var(--text-secondary);
    line-height: 1.6;
  }

  .cv-list {
    list-style: none;
    margin: 0;
    padding: 0;
    display: grid;
    gap: 12px;
  }

  .cv-list li {
    position: relative;
    padding-left: 20px;
    color: var(--text-secondary);
    line-height: 1.7;
  }

  .cv-list li::before {
    content: '•';
    position: absolute;
    left: 0;
    color: var(--brand-primary);
    opacity: 0.4;
  }

  .cv-grid {
    display: grid;
    gap: clamp(20px, 4vw, 32px);
    grid-template-columns: repeat(auto-fit, minmax(220px, 1fr));
  }

  .cv-grid__column h3 {
    margin: 0 0 12px;
    font-size: 1.05rem;
    color: var(--text-primary);
  }

  .cv-grid__column ul {
    list-style: none;
    margin: 0;
    padding: 0;
    display: grid;
    gap: 10px;
  }

  .cv-grid__column li {
    color: var(--text-secondary);
    line-height: 1.6;
    padding-left: 18px;
    position: relative;
  }

  .cv-grid__column li::before {
    content: '';
    position: absolute;
    left: 4px;
    top: 10px;
    width: 6px;
    height: 6px;
    border-radius: 50%;
    background: rgba(31, 62, 70, 0.25);
  }

  .cv-grid--dual {
    grid-template-columns: repeat(auto-fit, minmax(260px, 1fr));
  }

  @keyframes cv-portrait-drift {
    0%, 100% {
      transform: rotate(0deg) scale(1);
    }
    33% {
      transform: rotate(1.4deg) scale(1.02);
    }
    66% {
      transform: rotate(-1.2deg) scale(1.01);
    }
  }

  @media (max-width: 900px) {
    .cv-hero {
      text-align: center;
    }

    .cv-hero__role {
      justify-content: center;
    }

    .cv-hero__actions {
      justify-content: center;
    }

    .cv-hero__portrait {
      max-width: clamp(240px, 60vw, 320px);
    }

    .cv-timeline__item {
      grid-template-columns: 1fr;
      gap: 12px;
    }

    .cv-timeline__year {
      padding-top: 0;
    }
  }

  @media (max-width: 640px) {
    .curriculo-page {
      padding-block: 48px;
      gap: 36px;
    }

    .cv-wrap {
      width: min(100%, calc(100% - 24px));
    }

    .cv-hero {
      padding: clamp(24px, 8vw, 32px);
    }

    .cv-hero__summary {
      font-size: 1rem;
    }

    .cv-hero__actions {
      flex-direction: column;
    }

    .cv-section {
      padding: clamp(22px, 6vw, 28px);
    }
  }

  @media (prefers-reduced-motion: reduce) {
    .cv-hero,
    .cv-section,
    .cv-card,
    .cv-hero__actions a {
      transition: none !important;
    }

    .cv-hero__portrait {
      animation: none !important;
    }
  }
</style>
