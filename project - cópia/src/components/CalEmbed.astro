---
// Cal.com Modal - Floating window para agendamento
// Triggered by Header button and Contato section
// https://cal.com/drgustavomendes
---

<!-- Modal Overlay -->
<div id="cal-modal-overlay" class="cal-modal-overlay" aria-hidden="true">
  <div class="cal-modal-container" role="dialog" aria-modal="true" aria-labelledby="cal-modal-title">
    <!-- Header do Modal -->
    <div class="cal-modal-header">
      <h2 id="cal-modal-title" class="cal-modal-title">Agendar Consulta</h2>
      <button
        id="cal-modal-close"
        class="cal-modal-close"
        aria-label="Fechar agendamento"
      >
        <svg width="24" height="24" viewBox="0 0 24 24" fill="none" stroke="currentColor" stroke-width="2" stroke-linecap="round" stroke-linejoin="round">
          <line x1="18" y1="6" x2="6" y2="18"></line>
          <line x1="6" y1="6" x2="18" y2="18"></line>
        </svg>
      </button>
    </div>

    <!-- Cal.com Embed -->
    <div class="cal-modal-body">
      <div id="cal-inline-embed" class="cal-inline-wrapper">
        <!-- Loading state -->
        <div class="cal-loading-state">
          <div class="loading-spinner"></div>
          <p class="loading-text">Carregando calendário...</p>
        </div>
      </div>
    </div>
  </div>
</div>

<script>
  function setupCalModal() {
    const overlay = document.getElementById('cal-modal-overlay');
    const closeBtn = document.getElementById('cal-modal-close');

    if (!overlay || !closeBtn) return;

    let calInitialized = false;

    // Função para abrir modal
    function openModal() {
      if (!overlay) return;
      overlay.setAttribute('aria-hidden', 'false');
      overlay.classList.add('active');
      document.body.style.overflow = 'hidden';

      // Inicializar Cal.com apenas na primeira abertura
      if (!calInitialized) {
        loadCalScript();
        calInitialized = true;
      }
    }

    // Função para fechar modal
    function closeModal() {
      if (!overlay) return;
      overlay.setAttribute('aria-hidden', 'true');
      overlay.classList.remove('active');
      document.body.style.overflow = '';
    }

    // Carregar script do Cal.com
    function loadCalScript() {
      const script = document.createElement('script');
      script.type = 'text/javascript';
      script.src = 'https://app.cal.com/embed/embed.js';
      script.async = true;

      script.onload = function () {
        // @ts-ignore - Cal is loaded from external script
        if (typeof Cal !== 'undefined') {
          // @ts-ignore
          Cal('init', {
            origin: 'https://cal.com',
          });

          // @ts-ignore
          Cal('inline', {
            elementOrSelector: '#cal-inline-embed',
            calLink: 'drgustavomendes',
            layout: 'month_view',
            config: {
              theme: 'light',
              branding: {
                brandColor: '#1A1A1A',
              },
            },
          });

          // Remover loading state após carregar
          setTimeout(() => {
            const loadingState = document.querySelector('.cal-loading-state') as HTMLElement;
            if (loadingState) {
              loadingState.style.opacity = '0';
              setTimeout(() => {
                loadingState.style.display = 'none';
              }, 300);
            }
          }, 1000);
        }
      };

      document.head.appendChild(script);
    }

    // Event listeners

    // Escutar evento customizado do Header
    window.addEventListener('open-cal-modal', openModal);

    // Fechar ao clicar no botão X
    closeBtn.addEventListener('click', closeModal);

    // Fechar ao clicar fora do modal (no overlay)
    overlay.addEventListener('click', (e) => {
      if (e.target === overlay) {
        closeModal();
      }
    });

    // Fechar com tecla ESC
    document.addEventListener('keydown', (e) => {
      if (e.key === 'Escape' && overlay.classList.contains('active')) {
        closeModal();
      }
    });
  }

  if (document.readyState === 'loading') {
    document.addEventListener('DOMContentLoaded', setupCalModal);
  } else {
    setupCalModal();
  }
</script>

<style>
  /* ===== MODAL OVERLAY ===== */
  .cal-modal-overlay {
    position: fixed;
    top: 0;
    left: 0;
    right: 0;
    bottom: 0;
    background: rgba(0, 0, 0, 0.7);
    backdrop-filter: blur(4px);
    -webkit-backdrop-filter: blur(4px);
    z-index: 9999;
    display: flex;
    align-items: center;
    justify-content: center;
    padding: 20px;
    opacity: 0;
    visibility: hidden;
    transition: opacity 0.3s ease, visibility 0.3s ease;
  }

  .cal-modal-overlay.active {
    opacity: 1;
    visibility: visible;
  }

  /* ===== MODAL CONTAINER ===== */
  .cal-modal-container {
    background: var(--bg-primary);
    border-radius: 12px;
    width: 100%;
    max-width: 900px;
    max-height: 90vh;
    display: flex;
    flex-direction: column;
    box-shadow: 0 20px 60px rgba(0, 0, 0, 0.3);
    transform: scale(0.95);
    opacity: 0;
    transition: transform 0.3s var(--ease-smooth), opacity 0.3s ease;
  }

  .cal-modal-overlay.active .cal-modal-container {
    transform: scale(1);
    opacity: 1;
  }

  /* ===== MODAL HEADER ===== */
  .cal-modal-header {
    display: flex;
    align-items: center;
    justify-content: space-between;
    padding: 24px 32px;
    border-bottom: 1px solid rgba(0, 0, 0, 0.08);
  }

  .cal-modal-title {
    margin: 0;
    font-size: 24px;
    font-weight: var(--font-semibold);
    color: var(--text-primary);
    letter-spacing: -0.02em;
  }

  .cal-modal-close {
    background: transparent;
    border: none;
    color: var(--text-secondary);
    cursor: pointer;
    padding: 8px;
    display: flex;
    align-items: center;
    justify-content: center;
    border-radius: 4px;
    transition: all var(--transition-fast);
  }

  .cal-modal-close:hover {
    background: rgba(0, 0, 0, 0.05);
    color: var(--text-primary);
  }

  .cal-modal-close:active {
    transform: scale(0.95);
  }

  /* ===== MODAL BODY ===== */
  .cal-modal-body {
    flex: 1;
    overflow-y: auto;
    padding: 0;
  }

  .cal-inline-wrapper {
    min-height: 600px;
    position: relative;
  }

  /* ===== LOADING STATE ===== */
  .cal-loading-state {
    position: absolute;
    top: 0;
    left: 0;
    right: 0;
    bottom: 0;
    display: flex;
    flex-direction: column;
    align-items: center;
    justify-content: center;
    gap: 20px;
    background: var(--bg-primary);
    transition: opacity 0.3s ease;
  }

  .loading-spinner {
    width: 40px;
    height: 40px;
    border: 3px solid rgba(0, 0, 0, 0.1);
    border-top-color: var(--text-primary);
    border-radius: 50%;
    animation: spinner-rotation 0.8s linear infinite;
  }

  @keyframes spinner-rotation {
    to {
      transform: rotate(360deg);
    }
  }

  .loading-text {
    margin: 0;
    font-size: 14px;
    color: var(--text-tertiary);
  }

  /* ===== RESPONSIVE - MOBILE ===== */
  @media (max-width: 767px) {
    .cal-modal-overlay {
      padding: 0;
    }

    .cal-modal-container {
      max-width: 100%;
      max-height: 100vh;
      height: 100%;
      border-radius: 0;
    }

    .cal-modal-header {
      padding: 20px var(--padding-mobile);
    }

    .cal-modal-title {
      font-size: 20px;
    }

    .cal-inline-wrapper {
      min-height: 500px;
    }
  }

  /* ===== ACCESSIBILITY - REDUCED MOTION ===== */
  @media (prefers-reduced-motion: reduce) {
    .cal-modal-overlay,
    .cal-modal-container,
    .cal-modal-close,
    .cal-loading-state {
      transition: none !important;
      animation: none !important;
    }

    .cal-modal-overlay.active .cal-modal-container {
      transform: none;
    }

    .loading-spinner {
      animation: none !important;
    }
  }
</style>
